{
  "name": "ecommerce-shared",
  "version": "1.0.0",
  "description": "Configuración base para iniciar un proyecto con typescript",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "clean": "rimraf ./dist && rimraf ./coverage",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "fix": "eslint --fix 'src/**/*.ts' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "prepare": "husky install",
    "dup": "jscpd --pattern 'src/**/*.ts' --reporters 'consoleFull,console,html' --mode 'strict' --min-lines 5 --min-tokens 70 --output './report'"
  },
  "keywords": [],
  "author": "Julián Andrés Lasso Figueroa [julian.lasso@sofka.com.co]",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jscpd": "^3.5.10",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.9",
    "ts-jest": "^29.2.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
